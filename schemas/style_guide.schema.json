{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "style_guide.schema.json",
  "title": "NovelStyleGuideV2",
  "type": "object",
  "required": ["voice", "tense", "sentence_length", "lexical_density", "tone"],
  "properties": {
    "voice": {
      "type": "string",
      "enum": [
        "first-person",
        "second-person",
        "third-person limited",
        "third-person omniscient",
        "third-person objective"
      ]
    },
    "tense": {
      "type": "string",
      "enum": [
        "simple past",
        "past perfect",
        "past progressive",
        "simple present",
        "present perfect",
        "present progressive"
      ]
    },
    "sentence_length": { "type": "string", "enum": ["short", "moderate", "long, variable"] },
    "lexical_density": { "type": "string", "enum": ["low", "moderate", "high"] },
    "tone":             { "type": "string" },

    "rules": {
      "type": "object",
      "description": "Editorial formatting rules"
    },
    "preferred_pov":    { "type": "string" },
    "piece_length":     { "type": "integer", "minimum": 100 }
  }
}
